---
import icons from "../collections/icons.json";
import IconCard from "../components/icon-card.astro";
import Layout from "../layouts/main.astro";
import PageHeading from "../components/page-heading.astro";

const IconsKeywords = icons.map(icon => icon.IconName.toLowerCase()).join(', ');
const MetaKeywords = `bangla svg icons, bangla icons, free bangla logo, ${IconsKeywords}, bangla icons for website, bangla svg, copy paste bangla svg, free bangla icon, bengali web text, bengali material icon, bangla ui`;
---

<Layout title="Bangla Icons" metaDescription="A list of all the svg icons that are in the Bengali svg block." metaKeywords={MetaKeywords}>
  <section class="relative z-20 max-w-3xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Icons"
      description="A list of all the svg icons that are in the Bengali svg block."
    />

<section class="max-w-3xl my-12 mx-auto">
  <div
    class="grid items-stretch w-full grid-cols-2 sm:grid-cols-4 xl:grid-cols-6 gap-7 mt-7"
  >
    {
      icons.map((icon) => {
        return (
          <IconCard
            IconName={icon.name}
            IconPath={icon.path}
          />
        )
      })
    }
  </div>
</section>

</section>
</Layout>