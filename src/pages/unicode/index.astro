---
import PageHeading from "../../components/page-heading.astro";
import UnicodeBlockCard from "../../components/unicode-block-card.astro";
import Layout from "../../layouts/main.astro";
---

<Layout title="Unicode Characters - Bangla Web Fonts">
  <section class="relative z-20 max-w-3xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Unicode Characters"
      description="Browse Unicode characters relevant to Bangla typography. This includes native Bengali characters and symbols from other scripts often used alongside Bengali, such as Arabic, Devanagari."
    />


<div class="max-w-3xl my-12 mx-auto">
  <div
    class="grid items-stretch w-full grid-cols-2 sm:grid-cols-4 xl:grid-cols-6 gap-7 mt-7"
  >
    
          <UnicodeBlockCard
            UnicodeBlockName="Bengali"
            UnicodeBlockPath="bengali"
            UnicodeBlockDescription="Characters from the Bengali Unicode block (U+0980â€“U+09FF)."
          /> 
<UnicodeBlockCard
            UnicodeBlockName="Others"
            UnicodeBlockPath="others"
            UnicodeBlockDescription="Includes Devanagari, Arabic and more scripts commonly used with Bangla."
          />
        
  </div>
</div>


</section>
</Layout>