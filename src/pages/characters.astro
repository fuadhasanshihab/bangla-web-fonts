---
import characters from "../collections/bengali-unicode-characters.json";
import CharacterCard from "../components/character-card.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Bengali Characters - Bangla Web Fonts">
  <section class="relative z-20 max-w-3xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Bengali Characters"
      description="A list of all the Unicode characters that are in the Bengali Unicode block."
    />

<section class="max-w-3xl my-12 mx-auto px-7 lg:px-0">
  <div
    class="grid items-stretch w-full grid-cols-2 sm:grid-cols-4 xl:grid-cols-6 gap-7 mt-7"
  >
    {
      characters.map((character) => {
        return (
          <CharacterCard
            CharacterSymbol={character.symbol}
            CharacterUnicode={character.unicode}
            CharacterHTML={character.html}
            CharacterName={character.name}
            CharacterPath={character.path}
          />
        )
      })
    }
  </div>
</section>

</section>
</Layout>