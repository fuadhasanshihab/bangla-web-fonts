---
import FontsList from "../components/home/fonts-list.astro";
import Layout from "../layouts/main.astro";
import fonts from "../collections/fonts.json";
import Separator from "../components/home/separator.astro";
import Button from "../components/button.astro";

const preloadedFonts = fonts.slice(0, 6);

const FontPreloads = preloadedFonts
  .map(
    (font) =>
      `<link rel="preload" as="font" type="font/woff2" href="/fonts/${font.FontPath}/${font.FontPath}-regular.woff2" crossorigin="anonymous" />`
  )
  .join("");


const FontsKeywords = fonts.map(font => font.FontName.toLowerCase()).join(', ');

const MetaKeywords = `bangla web fonts, bangla fonts, free bangla fonts, ${FontsKeywords}, bangla fonts for website, bangla font, embed bangla font, free bangla web font, bengali web font, bengali font, bangla font cdn`;
---

<Layout title="Bangla Web Fonts - Free Bangla Fonts CDN for Websites" extraStyleUrl="/css/webfonts.min.css" metaDescription="Bangla Web Fonts is a free Bangla fonts CDN with high-quality web fonts. Easily use Bangla fonts on your website with fast loading and smooth rendering." fontPreloads={FontPreloads} metaKeywords={MetaKeywords}>

<div
    class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <div class="flex flex-col items-center md:flex-row">
      <div class="relative w-full md:w-1/2">
        <h1
          class="mb-5 text-4xl font-bold leading-tight md:text-4xl lg:text-6xl dark:text-white"
        >
          Bangla Web Fonts
        </h1>
        <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
          A fast Bangla fonts CDN for seamless typography on the web.
        </p>
<!--
        <p class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
          I can help you out with:
        </p>
        <ul
          class="py-2 space-y-[3px] text-sm list-disc list-inside text-neutral-500 dark:text-neutral-400"
        >
          <li>Vue.js Development</li>
          <li>React.js Development</li>
          <li>Node.js Development</li>
          <li>Website Design</li>
          <li>and more...</li>
        </ul>
-->
        <Button text="Github" link="https://github.com/fuadhasanshihab/bangla-web-fonts" />
      </div>
      <div
        class="relative justify-end hiddenX block w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0"
      >
        <div class="relative z-50 w-full">
          <div
            class="absolute bottom-0 z-40 w-16 h-16 -translate-x-6 -translate-y-1/2 lg:top-auto top-0 lg:-translate-y-[330px] rounded-full"
          >
            <span
              class="relative z-20 flex items-center justify-center w-full h-full text-2xl border-8 border-white rounded-full dark:border-neutral-950 bg-neutral-100 dark:bg-neutral-900"
            >
              <span
                class="flex items-center justify-center w-full h-full bg-white border border-dashed rounded-full dark:bg-neutral-950 border-neutral-300 dark:border-neutral-700"
                >üë®‚Äçüíª</span
              >
            </span>
          </div>
          <div class="relative z-30 px-10">
            <img
              src="/assets/logo/3264x3264.jpg"
              loading="eager"
              decoding="auto"
              class="relative z-30 w-full aspect-[790/1189] md:max-w-md mx-auto dark:-translate-y-0.5"
            />
          </div>
          <div
            class="absolute bottom-0 right-0 z-20 w-full h-full lg:h-[420px] translate-x-0 -translate-y-px border border-dashed rounded-2xl bg-gradient-to-r dark:from-neutral-950 dark:via-black dark:to-neutral-950 from-white via-neutral-50 to-white border-neutral-300 dark:border-neutral-700"
          >
          </div>
        </div>
      </div>
    </div>
  </div>

  <Separator text="All Web Fonts" />

  <FontsList/>
</Layout>
