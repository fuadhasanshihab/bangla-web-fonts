---
import PageHeading from "../../components/page-heading.astro";
import Layout from "../../layouts/main.astro";
---

<Layout title="Unicode Encode/Decode Tool - Convert Text to Unicode and Vice Versa" metaDescription="Easily encode and decode text to Unicode or Unicode to text with this online tool. Supports all languages and makes copying results easy." metaKeywords="unicode encode, unicode decode, text to unicode, unicode to text, text encoding, text decoding, unicode tool, online unicode converter, unicode encoding, unicode decoding, convert text">
  <section class="relative z-20 max-w-3xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Unicode Encode/Decode Tool"
      description=""
    />

  <style>
    textarea.auto-height {
      overflow: hidden;
      resize: none;
      min-height: 100px;
    }
  </style>

      



      <div class="text-center mt-10 mb-6">
        <button
          id="swapButton"
          class="inline-flex items-center justify-center gap-2 w-full bg-gray-900 hover:bg-gray-800 text-white font-medium py-2.5 px-4 rounded-xl transition"
        >â‡„ Swap Conversion Mode</button>
      </div>

      



      <div id="textToUnicodeSection" class="space-y-3 relative">
        <label for="textInput" class="text-lg font-medium block">Text to Unicode</label>
        <textarea
          id="textInput"
          rows="4"
          class="w-full rounded-xl border border-gray-300 focus:ring-2 focus:ring-gray-500 focus:outline-none p-4 font-mono text-sm resize-y"
          placeholder="Type your text here..."
        ></textarea>

        <div class="relative">
          <textarea
            id="unicodeOutput"
            class="w-full auto-height rounded-xl border border-gray-200 bg-gray-50 text-gray-700 p-4 font-mono text-sm pr-16 focus:ring-0 focus:transparent focus:outline-none"
            readonly
            placeholder="Unicode output will appear here"
          ></textarea>
          <button
            id="copyTextToUnicode"
            class="absolute top-2 right-2 bg-gray-800 text-white px-2 py-0.5 rounded-xl hover:bg-gray-700 transition text-sm"
          >Copy</button>
        </div>
      </div>





      
      <div id="unicodeToTextSection" class="space-y-3 hidden relative">
        <label for="unicodeInput" class="text-lg font-medium block">Unicode to Text</label>
        <textarea
          id="unicodeInput"
          rows="4"
          class="w-full rounded-xl border border-gray-300 focus:ring-2 focus:ring-gray-500 focus:outline-none p-4 font-mono text-sm resize-y"
          placeholder="Paste Unicode here..."
        ></textarea>

        <div class="relative">
          <textarea
            id="textOutput"
            class="w-full auto-height rounded-xl border border-gray-200 bg-gray-50 text-gray-700 p-4 font-mono text-sm pr-16 focus:ring-0 focus:transparent focus:outline-none"
            readonly
            placeholder="Converted text will appear here"
          ></textarea>
          <button
            id="copyUnicodeToText"
            class="absolute top-2 right-2 bg-gray-800 text-white px-2 py-0.5 rounded-xl hover:bg-gray-700 transition text-sm"
          >Copy</button>
        </div>
      </div>




    
  <script is:inline>const textInput=document.getElementById("textInput"),unicodeOutput=document.getElementById("unicodeOutput"),unicodeInput=document.getElementById("unicodeInput"),textOutput=document.getElementById("textOutput");function autoResize(t){t.style.height="auto",t.style.height=t.scrollHeight+"px"}function handleCopy(t,e){e.select(),document.execCommand("copy");let n=t.textContent;t.textContent="Copied!",t.disabled=!0,t.classList.add("opacity-80","cursor-not-allowed"),setTimeout(()=>{t.textContent=n,t.disabled=!1,t.classList.remove("opacity-80","cursor-not-allowed")},2800)}textInput.addEventListener("input",()=>{let t=textInput.value,e=Array.from(t).map(t=>`\\u${t.charCodeAt(0).toString(16).padStart(4,"0")}`).join("");unicodeOutput.value=e,autoResize(unicodeOutput)}),unicodeInput.addEventListener("input",()=>{let t=unicodeInput.value.trim();try{let e=`"${t.replace(/"/g,'\\"')}"`;textOutput.value=JSON.parse(e)}catch{textOutput.value=""}autoResize(textOutput)}),document.getElementById("copyTextToUnicode").addEventListener("click",()=>handleCopy(document.getElementById("copyTextToUnicode"),unicodeOutput)),document.getElementById("copyUnicodeToText").addEventListener("click",()=>handleCopy(document.getElementById("copyUnicodeToText"),textOutput)),document.getElementById("swapButton").addEventListener("click",()=>{document.getElementById("textToUnicodeSection").classList.toggle("hidden"),document.getElementById("unicodeToTextSection").classList.toggle("hidden")}),autoResize(unicodeOutput),autoResize(textOutput); </script>






</section>
</Layout>
